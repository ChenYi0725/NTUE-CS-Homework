<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <Spinner
        android:id="@+id/spinner_activity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/activity_types"
        />

    <TextView
        android:id="@+id/text_calorie_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消耗能量(千卡/公斤/小時): "
        android:paddingTop="8dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="體重 (公斤):"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/input_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="請輸入體重"
            android:inputType="numberDecimal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="運動時間 (小時):"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/input_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="請輸入運動時間"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_calories_burned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消耗能量 (千卡): "
        android:textSize="18sp"
        android:paddingTop="16dp"/>
</LinearLayout>
